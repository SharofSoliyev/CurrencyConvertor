<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyConvertor.MainPage">

    <StackLayout x:Name="main_layout" Orientation="Vertical">
        <StackLayout>
            <Label Text="Курс валют" Background="#797979" HeightRequest="50" VerticalTextAlignment="Center" FontFamily="montserrat" TextColor="White"  HorizontalTextAlignment="Center" FontSize="Body"  ></Label>

        </StackLayout>
        <StackLayout Background="White" HeightRequest="720" Margin="0 -10 0 0"  x:Name="currency_layout" >
            <StackLayout Orientation="Vertical" Margin="5">
                <StackLayout Orientation="Horizontal" Margin="10 0 0 0">
                    <Label Text="USD" TextColor="Black" FontAttributes="None" FontSize="15"></Label>
                </StackLayout>
                <StackLayout></StackLayout>
            </StackLayout>
        </StackLayout>
    </StackLayout>
    

</ContentPage>
